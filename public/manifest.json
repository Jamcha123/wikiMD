{
    "name": "WikiMD",
    "description": "wikipedia to markdown file convertor extension",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_icon": "logo.png"
    },
    "icons": {
        "64": "logo.png"
    },
    "permissions": ["tabs", "activeTab", "scripting"], 
    "host_permissions": ["https://en.wikipedia.org/wiki*"], 
    "content_scripts": [
        {
            "matches": ["https://en.wikipedia.org/wiki*"],
            "css": ["style.css"]
        }
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    }
}